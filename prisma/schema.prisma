// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// many to many relationship
model Subscription {
  subscriptionId    String  @id @default("email")
  users User[]
}
model User {
  id                String        @default(cuid()) @id
  email             String?       @unique
  phone             String?       @unique
  subscribedAt      DateTime      @default(now()) @map(name: "subscribed_at")
  subscription      Subscription  @relation(fields: [subscriptionType], references: [subscriptionId])
  subscriptionType  String        
  // add a subscription interval data field
}